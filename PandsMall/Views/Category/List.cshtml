@model IEnumerable<Category>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Category" asp-action="Create">Create new category</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>View Products</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="List" asp-route-authorId="@category.Id">View products</a></td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>